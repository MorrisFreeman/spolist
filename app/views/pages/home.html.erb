<%= form_tag search_path, remote: true, method: :get do %>
  <div class="row mb-3">
    <div class="col-sm-9">
      <%= text_field_tag :search, params[:search], class: "form-control", id: "tag" %>
    </div>
    <div class="col-sm-3">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<div id="playlists">
  <%= render partial: "playlists/playlist_list", locals: {playlists: @playlists} %>
</div>
