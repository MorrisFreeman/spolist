<div class="row">
  <div class="col-md-4 offset-md-4">
    <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
      </div>

      <div class="mb-2">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %> Remember Me
        <% end -%>
        <span class="float-right">
          <%= link_to "Forgot Password", new_user_password_path %>
        </span>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
